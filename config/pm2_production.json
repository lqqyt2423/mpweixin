{
  "apps" : [
    {
      "name"         : "mpweixin-app",
      "script"       : "/root/code/mpweixin/bin/server",
      "cwd"          : "/root/code/mpweixin",
      "instances"    : 1,
      "exec_mode"    : "cluster_mode",
      "max_memory_restart": "200M",
      "max_restarts": 40,
      "watch"        : false,
      "ignore_watch" : ["[\\/\\\\]\\./", "node_modules", "assets", "public", "uploads", ".git"],
      "error_file"       : "./logs/pm2.mpweixin-app.production_error.log",
      "out_file"         : "./logs/pm2.mpweixin-app.production_access.log",
      "env": {
          "NODE_ENV": "production",
          "DEBUG": "baiji:Adapter,baiji:Application,mpweixin:*",
          "PORT": "8002"
      }
    }
  ]
}
